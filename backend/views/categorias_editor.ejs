<!--
  View: Editor de Categorias
  - CRUD visual para categorias
-->
<!DOCTYPE html>
<html lang="PT-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portal de notícias</title>
  <style>
    :root {
      --font-family: 'Archivo', sans-serif;
      --h1: 800 24px/135% var(--font-family);
      --text: 400 16px/140% var(--font-family);
      --cor-principal: #291B1A;
      --cor-secundaria: #5ca3b3;
      --cor-fundo: #F0E8C2;
      --cor-body: #0F172A;
    }

    #nome_categoria      { grid-area: nome_categoria; }
    #descricao_categoria { grid-area: descricao_categoria; }
    #cor_tema            { grid-area: cor_tema; }
    #ativo               { grid-area: ativo; }
    .btn-group           { grid-area: btn-group; }

    body {
      background-color: var(--cor-body);
      font-family: Arial, Helvetica, sans-serif;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
      padding: 2rem;
    }

    .container {
      border: 1px solid var(--cor-principal);
      color: var(--cor-principal);
      padding: 2rem;
      background-color: var(--cor-fundo);
      width: 90%;
      min-height: 50vh;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
      border-radius: 0.8rem;
    }

    h1 {
      font: var(--h1);
      text-align: center;
      font-size: 2rem;
    }

    h2 {
      font: var(--h1);
      font-size: 1.5rem;
    }

    .fonth1 {
      font: var(--h1);
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }

    table, th, td {
      border: 1px solid black;
      padding: 0.5rem;
      text-align: center;
      vertical-align: middle;
      background-color: aliceblue;
    }

    .button-td {
      background-color: var(--cor-principal);
      color: #fff;
      border: none;
      border-radius: 0.5rem;
      padding: 8px 16px;
      font-size: 0.9rem;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
      display: inline-block;
    }

    .button-td:hover {
      background-color: var(--cor-secundaria);
      transform: scale(1.05);
    }

    .button-td:active {
      transform: scale(0.95);
      box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.2);
    }

    .btn-delete {
      background-color: #e74c3c;
    }

    .form-principal {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-areas:
        "nome_categoria cor_tema"
        "descricao_categoria ativo"
        "btn-group btn-group";
      gap: 2rem;
      align-items: start;
    }

    .form-principal label {
      font-weight: bold;
    }

    .form-principal input,
    .form-principal textarea,
    .form-principal select {
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 0.4rem;
      font-size: 0.9rem;
      width: 100%;
      box-sizing: border-box;
      margin-top: 0.5rem;
      transition: all 0.3s ease;
    }

    .form-principal textarea {
      resize: vertical;
      min-height: 4rem;
    }

    .form-principal input:focus,
    .form-principal textarea:focus,
    .form-principal select:focus {
      border-color: var(--cor-secundaria);
      box-shadow: 0 0 5px rgba(92, 163, 179, 0.5);
      outline: none;
    }

    .btn-group {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
      align-items: center;
    }

    form.form-inline {
      display: inline-block;
      margin: 0;
      padding: 0;
    }

  </style>
</head>
<body>

  <div class="container">
    <h2 class="fonth1">Cadastrar / Atualizar Categoria</h2>

    <form method="post" action="/categorias/cadastrar_categoria" class="form-principal">
      <input type="hidden" name="id_categoria" id="id_categoria">

      <div id="nome_categoria">
        <label for="nome_categoria_input">Nome</label>
        <input type="text" name="nome_categoria" id="nome_categoria_input" required>
      </div>

      <div id="cor_tema">
        <label for="cor_tema_input">Cor do tema</label>
        <input type="text" name="cor_tema" id="cor_tema_input">
      </div>

      <div id="descricao_categoria">
        <label for="descricao_categoria_input">Descrição da Categoria</label>
        <textarea name="descricao_categoria" id="descricao_categoria_input" required></textarea>
      </div>

      <div id="ativo">
        <label for="ativo_input">Status</label>
        <select name="ativo" id="ativo_input">
          <option value="1" selected>Ativado</option>
          <option value="0">Desativado</option>
        </select>
      </div>

      <div class="btn-group">
        <button type="submit" class="button-td" name="action" value="incluir">Cadastrar</button>
        <button type="submit" class="button-td" name="action" value="atualizar">Atualizar</button>
      </div>
    </form>

    <h1>CATEGORIAS</h1>

    <table>
      <thead class="fonth1">
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Cor Tema</th>
          <th>Ativo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% categorias.forEach(categoria => { %>
        <tr>
          <td><%= categoria.id_categoria %></td>
          <td><%= categoria.nome_categoria %></td>
          <td><%= categoria.descricao_categoria %></td>
          <td><%= categoria.cor_tema %></td>
          <td><%= categoria.ativo === 1 ? 'Sim' : 'Não' %></td>
          <td>
            <button type="button" class="button-td editar-btn-categoria" data-id="<%= categoria.id_categoria %>" data-nome="<%= categoria.nome_categoria %>" data-descricao="<%= categoria.descricao_categoria %>" data-cor="<%= categoria.cor_tema %>" data-ativo="<%= categoria.ativo %>">Editar</button>

            <form method="post" action="/categorias/deletar_categoria" class="form-inline">
              <input type="hidden" name="id_categoria" value="<%= categoria.id_categoria %>">
              <button type="submit" class="button-td btn-delete">Deletar</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script nonce="<%= nonce %>">
    function editar_formulario(id_categoria, nome_categoria, descricao_categoria, cor_tema, ativo) {
      document.getElementById("id_categoria").value = id_categoria;
      document.getElementById("nome_categoria_input").value = nome_categoria;
      document.getElementById("descricao_categoria_input").value = descricao_categoria;
      document.getElementById("cor_tema_input").value = cor_tema;
      document.getElementById("ativo_input").value = ativo;
      document.querySelector(".form-principal").scrollIntoView({ behavior: "smooth", block: "start" });
    }

    document.addEventListener('DOMContentLoaded', function() {
      const botoes = document.querySelectorAll('.editar-btn-categoria');
      botoes.forEach(botao => {
        botao.addEventListener('click', function() {
          editar_formulario(
            this.dataset.id,
            this.dataset.nome,
            this.dataset.descricao,
            this.dataset.cor,
            this.dataset.ativo
          );
        });
      });
    });
  </script>

</body>
</html>